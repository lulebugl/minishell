CompileFlags:
  Add:
    # Include paths for your actual directory structure
    - "-I./includes"
    - "-I./libft"
    # Sometimes absolute paths work better
    - "-I${workspaceFolder}/includes"
    - "-I${workspaceFolder}/libft"

Index:
  Background: Build
  StandardLibrary: Yes

Diagnostics:
  UnusedIncludes: None
  Suppress:
    - unused-includes

---
# Special configuration for source files
If:
  PathMatch: srcs/.*\.c
CompileFlags:
  Add:
    - "-I../includes"
    - "-I../libft"